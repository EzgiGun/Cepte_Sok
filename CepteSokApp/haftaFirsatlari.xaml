                        <Label Text="Adet : 1" VerticalOptions="Center" x:Name="label3"/>

                        <Button Text="-"
                                FontAttributes="Bold"
                                TextColor="Black"
                                FontSize="9"
                                WidthRequest="30"
                                HeightRequest="30"
                                CornerRadius="15"
                                VerticalOptions="Center"
                                HorizontalOptions="Center"
                                BackgroundColor="#ffe000"
                                Clicked="btnm6"
                                />

                    </StackLayout>
                </StackLayout>

                
            </StackLayout>

        </Grid>


    </ScrollView>






</ContentPage>